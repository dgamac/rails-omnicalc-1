<h1>Payment Results</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @rate.to_fs(:percentage, { :precision => 4 } )  %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @time %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= @loan.to_fs(:currency) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= @payment.to_fs(:currency) %>
  </dd>
</dl>
<a href="/payment/new">
  Calculate another payment
</a>
